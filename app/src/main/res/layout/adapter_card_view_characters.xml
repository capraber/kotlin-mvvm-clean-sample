<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_height"
    app:cardCornerRadius="@dimen/corner_radius_card_view"
    tools:backgroundTint="@color/background_card_view"
    app:cardElevation="@dimen/elevation_card_view">

    <ImageView
        android:id="@+id/card_view_character_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/card_view_character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_card_view"
        android:textColor="@color/white"
        android:layout_margin="@dimen/margin_card_view"
        android:text="@string/name"
        android:layout_gravity="bottom|end"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:elevation="@dimen/elevation_text_view_card_view"
        android:background="@drawable/shadow"/>
</androidx.cardview.widget.CardView>